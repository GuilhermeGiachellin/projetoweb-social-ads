@{
	ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewBag.Title</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/main.css">
	<!--===============================================================================================-->
</head>

<body>
	<main class="h-100vh">
		<div class="d-flex align-items-center justify-content-center position-relative h-100">
			<div class="container d-flex justify-content-center">
				<div class="col-sm-10 col-md-8 col-lg-6 position-relative z-index-1">
					<h1 class="display-4 text-white mb-4 pb-5 position-relative text-center">Bem vindo ao FTEC Social</h1>
					<div class="card card-body mb-5 p-4 p-sm-5 mt-sm-n5 mb-n5">
						<h2 class="h1 mb-2 text-center">Entre na sua Conta!</h2>

						<form class="mt-4" asp-controller="Usuario" asp-action="Login" method="post">

							@Html.ValidationSummary()

							<!-- Email -->
							<div class="mb-3 position-relative input-group">
								<input type="email" class="form-control" id="login.email" name="login.email" placeholder="Informe seu email">
							</div>

							<!-- New password -->
							<div class="mb-3">
								<!-- Input group -->
								<div class="input-group input-group">
									<input class="form-control fakepassword" id="login.senha" name="login.senha" type="password" id="psw-input" placeholder="Informe sua senha">
								</div>
							</div>

							<!-- Button -->
							<div class="d-grid">
								<div class="b mx-3 mb-1" style="display: flex;justify-content: center; align-items: center; background-color:#9fe3e57a;">
									<button class="btn btn-shadow mr-3" type="submit">Salvar</button>
								</div>
							
							</div>
							

							<p class="mt-3 text-center">Não possui uma conta?<a href="sign-up.html"> @Html.ActionLink("Clique aqui para criar", "Cadastrar", "Usuario") </a></p>

						</form>
					</div>
				</div>
			</div>
		</div>
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>