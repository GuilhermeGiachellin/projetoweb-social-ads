@{
	ViewBag.Title = "Cadastrar";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewBag.Title</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" type="image/png" href="images/icons/favicon.ico" />
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/main.css">
</head>

<body>

	<main class="h-100">
		<div class="pt-5 d-flex align-items-center justify-content-center position-relative">
			<div class="container d-flex justify-content-center">
				<div class="col-sm-10 col-md-8 col-lg-6 position-relative z-index-1">
					<h1 class="display-4 text-white mb-4 pb-5 position-relative text-center">Social Uniftec</h1>
					<div class="card card-body p-4 p-sm-5 mt-sm-n5 mb-5">
						<h2 class="h1 mb-2 text-center">Crie uma Conta!</h2>

						<form class="mt-4" asp-controller="Usuario" asp-action="Cadastrar" method="post">

							@Html.ValidationSummary()

							<label class="col-form-label">Nome:</label>
							<div class="mb-3 position-relative input-group">
								<input type="text" class="form-control" id="usuariocadastro.nome" name="usuariocadastro.nome" placeholder="Digite seu nome">
							</div>

							<label class="col-form-label">Sobrenome:</label>
							<div class="mb-3 position-relative input-group">
								<input type="text" class="form-control" id="usuariocadastro.sobrenome" name="usuariocadastro.sobrenome" placeholder="Digite seu Sobrenome">
							</div>

							<label class="col-form-label">E-mail:</label>
							<div class="mb-3 position-relative input-group">
								<input type="email" class="form-control" id="usuariocadastro.email" name="usuariocadastro.email" placeholder="Digite seu email">
							</div>

							<div class="mb-3">
								<label class="col-form-label">Senha:</label>
								<div class="input-group input-group">
									<input class="form-control fakepassword" id="usuariocadastro.senha" name="usuariocadastro.senha" type="password" id="psw-input" placeholder="Digite sua senha">
								</div>
							</div>

							<div class="mb-3">
								<label class="col-form-label">Repita sua Senha:</label>
								<div class="input-group input-group">
									<input class="form-control fakepassword" id="usuariocadastro.senhaRepetida" name="usuariocadastro.senhaRepetida" type="password" id="psw-input" placeholder="Digiete sua senha">
								</div>
							</div>
							
							<div class="mb-3">
								<label class="col-form-label">Data Nascimento:</label>
								<div class="left-inner-addon">
									<i class="la la-calendar"></i>
								<input type="date" class="form-control dt-envio" placeholder="Informe sua Data Nascimento" id="usuariocadastro.dataComemorativa" name="usuariocadastro.dataNascimento">
								</div>
							</div>
							
							<div class="d-grid">
								<div class="b mx-3 mb-1" style="display: flex;justify-content: center; align-items: center; background-color:#9fe3e57a;">
									<button type="submit" class="btn btn-lg btn-primary-soft">Cadastrar</button>
								</div>

							</div>

							<p class="mt-3 text-center">Já possui uma conta?<a href="sign-up.html"> @Html.ActionLink("Clique aqui para fazer login", "Login", "Usuario") </a></p>

						</form>
					</div>
				</div>
			</div>
		</div>
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

