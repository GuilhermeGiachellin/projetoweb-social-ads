@model AnuncioModel
<div class="body ">

	<form class="mt-4" asp-controller="Anuncio" asp-action="AnuncioCadastro" method="post">

		@Html.ValidationSummary()

		<div class="card card-body">
			<div class="d-flex card shadow-none text-center h-100 mb-3">
				<h2>Adicione ou Remova Anúncios</h2>

			</div>
		</div>

		<div class="row g-3 mt-4">

			<div class="col-12">
				<div class="card shadow-none text-center mt-3 h-10">

					<div class="row m-3">
						<h4>Adição de Anúncios</h4>

						<div class="input-group m-3">
							<div class="m-3 ms-3 mx-5">
								<div class="col-lg-3 col-md-6 d-inline-block">
									<div class="input-group mb-3">
										<input type="file" class="form-control" id="upload" placeholder="Selecione um anúncio..."  aria-describedby="basic-addon2">
										
									</div>
								</div>
								<div class="col-lg-3 col-md-6 d-inline-block ms-5 mx-5">
									<div class="input-group mb-3">
										<div class="col-10">
											<input class="form-control m-3" placeholder="Digite Inforamções dobre o anuncio..." data-bs-toggle="modal" data-bs-target="#modalCreateFeed">
										</div>
									</div>
								</div>
								
							
								<div class="col-lg-3 col-md-6 d-inline-block">
									<div class="mt-3 position-relative input-group placeholder="Selecione um categoria">
										<select class="form-select form-control">
											<option value="0">Moda</option>
											<option value="1">Turismo</option>
											<option value="2">Esporte</option>
											<option value="3">Culinária</option>
											<option value="4">Jogos</option>
										</select>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-12 col-md-6 d-inline-block">
				<div class="col-2 ms-4">
					<div class="b mx-3 mb-1 col-3" aria-label="Remover">
						<button class="btn btn-light mr-3" type="reset">Salvar</button>
					</div>
				</div>
			</div>
				
			
			<div class="card shadow-none text-center mt-3 h-10">

				<div class="row m-3">
					<h4>Pesquisa seu Anúncios</h4>

					<div class="input-group m-3">
						<div class="col-10">
							<input class="form-control m-3" placeholder="Pesquise pelo anúncio..." data-bs-toggle="modal" data-bs-target="#modalCreateFeed">
						</div>
						<div class="col-2">
							<div class="b mx-3 mb-1 col-3" aria-label="Remover">
								<button class="btn btn-primary mr-3" type="reset" style="background-color:#9fe3e57a; border: 0px;color:black">Adicionar</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card shadow-none text-center mt-3 h-10">

				<div class="row m-3">
					<div class="col-10">
						<div class="dropdown" style="width: 100%">
							<div class="d-flex align-items-center justify-content-start">
								<div class="d-flex m-2">
									<img class="avatar-img  border border-white border-3" src="@Model.URLImagem" alt="" width="80" height="auto">
								</div>
								<div class="row ms-2 mt-2">

									<p>@Model.Texto</p>
									<p>@Model.Link</p>

								</div>
							</div>
						</div>
					</div>
					<div class="col-2">
						<div class="row mt-3">
							<div class="b mx-3 mb-1 col-3" aria-label="Remover">
								<button class="btn btn-secondary mr-3" type="reset" style="background-color:crimson;">Remover</button>
							</div>
						</div>

					</div>

				</div>
			</div>
	</form>
</div>
